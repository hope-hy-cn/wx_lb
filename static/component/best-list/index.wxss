.text-center{
  text-align:center;
}
.clear-both{
  content:'';
  overflow: hidden;
  clear: both;  
}
.animation-back{ 
  transition:'all .5s';
}
.best-list{ 
}
.best-head {
  margin-top:42rpx;
}
.best-head .title{ 
  font-size:48rpx;
  color:#4E5761;
  font-family:PingFangSC-Regular;
  font-weight:400;
}
.best-head .text{ 
  font-size:32rpx;
  color:#A1A7AE;
  font-family:PingFangSC-Regular;
  font-weight:400;
}

.list-content{
  width:100%;
  height:100%; 
  padding:50rpx 18rpx;
  box-sizing:border-box;
  display:flex;
  flex-wrap:wrap;

}
.list-content .group{
  flex:0 0 50%; 
  margin-bottom:18rpx;
} 

.list-content .group-content{ 
  width:334rpx;
  height:464rpx;
  border-radius:20rpx; 
  margin:auto;
  position:relative;
}

.group-content .img{
  width:100%;
  height:100%; 
  border-radius:20rpx;
}

.group-content .like-img ,.super-like-img{
  position: absolute;
}
 .group-content .like-img  .img,.super-like-img .img{
  width:100%;
  height:100%;
}  
.group-content .like-img{
  width:160rpx;
  height:100rpx; 
  top:5vh;
  left:6.4vw;
}
.group-content .super-like-img{
  width:190rpx;
  height:122rpx;
  left:50%;
  margin-left:-95rpx;
  bottom:90rpx;
}

.group-content .footer{
  position:absolute;
  bottom:0;
  left:0;
  width:100%; 
  border-radius:20rpx; 
  display:flex;
  align-items:center;
  padding:0 12rpx;
  box-sizing:border-box;
}
.group-content .footer .hint{
  flex:1;
  text-align: left;
  width:230rpx;
  height:80rpx; 
  margin-bottom:18rpx;
}

.group-content .footer .hint .name{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:#fff; 
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
}
.group-content .footer .hint .time{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#F8CA1C; 
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
}

.group-content .footer .footer-icon{
  flex:0 0 64rpx;
  height:64rpx; 
  margin-bottom:10rpx;
  background:#fff;
  border-radius: 50%; 
}
.group-content .footer .footer-icon .img{
  width:32rpx;
  height:26rpx;
  margin-top:20rpx;  
  z-index: 10;
  transform: scale();
  transition: all .2s;
}
.group-content .footer .footer-icon .add-heart-active{
  transform: scale(1.2) !important;
  transition: all .2s !important;
}
.mould-box{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background:rgba(255,255,255,.7);
  
}

.super-like-transform{ 
  animation:myfirst 1s;
}

@keyframes myfirst{
  0%   {transform:translateY(0px) rotateY(0deg);-webkit-transform:translateY(0px) rotateY(0deg);}
  25%   {transform:translateY(-120px) rotateY(0deg);-webkit-transform:translateY(-120px) rotateY(0deg);}
  50%   {transform:translateY(-120px) rotateY(360deg);-webkit-transform:translateY(-120px) rotateY(360deg);}
  /*25%  {transform:rotateY(0deg);}*/
  /*50%  {transform:rotateY(0deg);}*/
  100% {transform:rotate(0deg);-webkit-transform:rotate(0deg);}
}
@-webkit-keyframes  myfirst{
  0%   {transform:translateY(0px) rotateY(0deg);-webkit-transform:translateY(0px) rotateY(0deg);}
  25%   {transform:translateY(-120px) rotateY(0deg);-webkit-transform:translateY(-120px) rotateY(0deg);}
  50%   {transform:translateY(-120px) rotateY(360deg);-webkit-transform:translateY(-120px) rotateY(360deg);}
  /*25%  {transform:rotateY(0deg);}*/
  /*50%  {transform:rotateY(0deg);}*/
  100% {transform:rotate(0deg);-webkit-transform:rotate(0deg);}
} 
.superlike_num{ 
  width:80rpx;
  height:80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  background:#fff;
  box-shadow:0  2rpx 8rpx 0  rgba(153,178,217,0.59);
  color:#28B5FF;
  font-size:40rpx; 
  text-align: center;

}

